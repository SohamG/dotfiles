}
mem(){
  case $BUTTON in
    1) st -n "flt" -g 80x24 -e btop
      ;;
  esac 
  free -h | grep -i mem | awk '{print "ğŸ†“", $NF}' 
}
status_pre() {
    wind
    echo "$delim"
  dollar
  echo "$delim"
    speed
    echo "$delim"
    weather
    echo "$delim"
    moon_phases
    echo "$delim"
    wireless
    echo "$delim"
    mem
    echo "$delim"
    bat
    echo "$delim"
    volume
    echo "$delim"
    dte
    echo "$delim"
}

stat() {
  echo "$(status_pre | tr '\n' ' ')"
}

case $BUTTON in
  4) st -n "flt" -e nvim ~/.local/scripts/dwm-status ;;
esac
# Shell script legends say case esac is way faster than if
$@

