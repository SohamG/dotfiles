  echo -n "ğŸ’²â‚¹ "
   curl -s https://www.federalreserve.gov/feeds/data/H10_H10_RXI_N.B.IN.xml | perl -ne 'if (/<cb:value decimals="4" unit_mult="1" units="Currency">(.*)<\/cb:value>/) { printf "%.2f", $1; exit; }'
   #grep -i _per_usd | tail -n 1 | gawk 'match($0, />([0-9.]+)</, a) {print a[1]}'
}
