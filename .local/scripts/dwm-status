#!/bin/sh
delim="|"

wireless(){
  case $BUTTON in
    1) ip=$(dig +short myip.opendns.com @resolver1.opendns.com)
      notify-send "$ip"
      echo "$ip" | wl-copy
      ;;
  esac
	grep "^\s*w" /proc/net/wireless | awk '{ print "ğŸŒ", int($3 * 100 / 70) "%" }'
}
moon_phases(){
  # "Borrowed" from https://gist.github.com/zuloo/f2fed0de6ddbc0d25e2e
  local lp=2551443
  local now=$(date -u +"%s")
  local newmoon=592500
  local phase=$((($now - $newmoon) % $lp))
  local phase_number=$((((phase / 86400) + 1)*100000))

  # Multiply by 100000 so we can do integer comparison.  Go Bash!
  if   [ $phase_number -lt 184566 ];  then phase_icon="ğŸŒ‘"  # new
  elif [ $phase_number -lt 553699 ];  then phase_icon="ğŸŒ’"  # waxing crescent
  elif [ $phase_number -lt 922831 ];  then phase_icon="ğŸŒ“"  # first quarter
  elif [ $phase_number -lt 1291963 ];  then phase_icon="ğŸŒ“"  # first quarter
  elif [ $phase_number -lt 1661096 ]; then phase_icon="ğŸŒ•F"  # full
  elif [ $phase_number -lt 2030228 ]; then phase_icon="ğŸŒ–"  # waning gibbous
  elif [ $phase_number -lt 2399361 ]; then phase_icon="ğŸŒ—"  # last quarter
  elif [ $phase_number -lt 2768493 ]; then phase_icon="ğŸŒ˜"  # waning crescent
  else
    phase_icon="ğŸŒ‘"  # new
  fi
  echo -n $phase_icon
}
volume(){
  case $BUTTON in 
    1) vol +5% ;;
    2) vol -5% ;;
    3) vol -5% ;; 
  esac

  echo -n "ğŸ“¢"
  pactl get-sink-volume $(pactl get-default-sink) | awk '{print $5}'
}
update_weather(){
    curl -s https://wttr.in/columbus?1AFnQT > /tmp/weather 
    curl -s https://v2.wttr.in/columbus > /tmp/weather2
    echo "Updated weather cache! $(date) " >> /tmp/barlog
}
weather(){
 echo -n "â›…"
 # echo -n "ïª"

  if [ -f /tmp/weather ]; then
    weather_age=$(($(date +%s) - $(date -r /tmp/weather +%s)))
  else
    update_weather
  fi

 if [ $weather_age -gt 3600 ]; then
   update_weather
 fi
 case $BUTTON in
   1) st -n "flt" -e less -R "/tmp/weather2"
     ;;
 esac
  cat /tmp/weather | grep Â° | head -n 1 | sed 's/\D*//g' | awk '{print $int(NF-1), $NF}'
}

dte(){
  case $BUTTON in 
    1) notify-send "$(TZ='Asia/Kolkata' date)"
  esac
	date +'%a %d/%b %l:%M%P'
}
bat(){
     # echo -n "ğŸ”‹"
     bat=$(acpi -b | awk '{print $4}' | cut -d, -f1 | tr -d '%')
    # echo -n $bat
    if [ $bat -le 30 ]; then
      echo -n "ğŸª«"
    else
      echo -n "ğŸ”‹"
    fi
    echo "$bat%"
  }
speed(){
 echo -n "ğŸƒ"
  # iperf -c iperf.he.net | tail -n 1 | awk '{print $int(NF-1), $NF}'
 echo -n "Fix this"
}

